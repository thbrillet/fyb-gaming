<!-- BANNER -->
<div class="container-main-show">
  <div id="group1">
    <div class="content-head">
      <div class="main-head">
        <div class="container-title-hp">
          <div class="title-hp">
            <h1><%= @game.name.upcase %></h1>
            <h2><span class="pink"><%= @game.groups.length %></span> GROUPS IN TOTAL</h2>
            <h2>YOU TAKE ACTION IN <span class="pink"><%= current_user.groups.where(game_id: @game.id).length %></span> GROUPS</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="background" style="background: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)),
    url('<%= cl_image_path @game.photo if @game.photo.present? %>');"></div>
    <div class="foreground margin-top">
      <div class="diagonal-up"></div>

      <!-- BROWSE YOUR GROUPS -->
      <div class="your-groups-hp-container">
        <div class="your-groups-hp-title">
          <h4 class="animated fadeInRightBig">YOUR FRIENDS ARE PLAYING!</h4>
          <a href="#" class="link-btn">#BROWSE_YOUR_GROUPS</a>
        </div>
        <div class="your-groups-hp-scroll">
          <div class="relative-scroll">
            <div id="container-scroll">
              <div id="flex-scroll">
                <% @groups.each do |group| %>
                  <%= link_to group_path(group) do %>
                    <%= render "shared/groupcard", group: group %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="diagonal-down"></div>

      <!-- MATCH WITH NEW BUDDIES -->
      <div class="profile-hp-container">
        <div class="profile-hp-title">
          <a href="#" class="link-btn">#THEY_ARE_PLAYING <span style="color: white;"> <%= @game.name.upcase %></span></a>
          <h4>JOIN THEM!</h4>
        </div>
        <div class="profile-hp-scroll">
          <div class="flex-container-hp">
            <% @users.each do |user| %>
              <%= render "shared/usercard", user: user %>
            <% end %>
          </div>
        </div>
        <div class="profile-hp-all">
          <a href="#" class="link-btn"><span></span>#SEE_ALL_SELECTION</a>
        </div>
      </div>

      <div class="diagonal-up-orange"></div>

      <!--MATCH WITH NEW GROUPS -->
      <div class="groups-hp-container">
        <div class="groups-hp-title">
          <a href="#" class="link-btn">#OTHER_GROUPS <span style="color: white;">ON <%= @game.name.upcase %></span> </a>
          <h4>GROUP WITH THEM!</h4>
        </div>
        <div class="groups-hp-scroll">
          <div class="relative-scroll">
            <div id="container-scroll">
              <div id="flex-scroll">
                <% @groups_without_user.each do |group| %>
                  <%= render "shared/groupcard", group: group %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- MATCH WITH NEW GROUPS IN NEW GAMES -->
      <div class="new-games-hp-container">
        <div class="new-games-hp-title">
          <h4>YOU LOVE <%= @game.name.upcase %>?</h4>
          <a href="#" class="link-btn"><span style="color: white;">YOU MAY </span>#ALSO_LIKE_THESE</a>
        </div>
        <div class="new-games-hp-scroll">
          <div class="relative-scroll">
            <div id="container-scroll">
              <div id="flex-scroll">
                <% @other_games_groups.each do |group| %>
                  <%= render "shared/groupcard", group: group %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="diagonal-down"></div>

    </div>
  </div>
</div>

<% @users.each do |user| %>
  <%= render "shared/modal-usercard", user: user %>
<% end %>
<% @groups_without_user.each do |group| %>
  <%= render "shared/modals-groupcard", group: group %>
<% end %>
<% @other_games_groups.each do |group| %>
  <%= render "shared/modals-groupcard", group: group %>
<% end %>






















